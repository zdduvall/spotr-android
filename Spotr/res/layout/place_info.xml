<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#C0C0C0"
    android:orientation="vertical" >

    <!-- Title of the Location -->

    <TextView
        android:id="@+id/place_info_xml_textview_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2e3436"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Text for the description of the Location -->

    <TextView
        android:id="@+id/place_info_xml_textview_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="#2e3436" />

    <!-- Link for Google Map View -->

    <TextView
        android:id="@+id/place_info_xml_textview_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#124CFC"
        android:textStyle="italic" />

    <!-- Phone number button -->

    <Button
        android:id="@+id/place_info_xml_button_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/phone_button"
        android:paddingLeft="10dp"
        android:textSize="25sp" />

    <!-- Border -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:background="#eeeeec" />
    <!-- Map View -->

    <com.google.android.maps.MapView
        android:id="@+id/place_info_xml_mapview"
        style="@style/MapView"
        android:layout_height="500dp" />

</LinearLayout>