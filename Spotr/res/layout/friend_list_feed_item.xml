<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/friend_list_feed_item_xml_imageview_user_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="6dp"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/friend_list_feed_item_xml_textview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7A7A7A"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friend_list_feed_item_xml_textview_placename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7A7A7A"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friend_list_feed_item_xml_textview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7A7A7A"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/friend_list_feed_item_xml_textview_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friend_list_feed_item_xml_textview_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/friend_list_feed_item_xml_imageview_snap_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            android:visibility="gone" />

        <WebView
            android:id="@+id/friend_list_feed_item_xml_webview"
            android:layout_width="230dp"
            android:layout_height="280dp" />

        <Button
            style="@style/CommentButton"
            android:background="@drawable/button_state_selector"
            android:text="Comments" />

        <TextView
            android:id="@+id/friend_list_feed_item_xml_textview_number_of_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 comments"
            android:textColor="#7A7A7A"
            android:textSize="10dp" />

        <!-- Comments -->

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#D1D1D1"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="The Argentine has given his account of what happened that"
                    android:textColor="#000000"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#D1D1D1"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="The Argentine has given his account of what happened that infamous night against Bayern Munich, and has vowed to win back the hearts of City fans as he makes his way back to Manchester"
                    android:textColor="#000000"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>