<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f7f7f7"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/friend_list_feed_item_xml_imageview_user_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="6dp"
        android:src="@drawable/user_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/friend_list_feed_item_xml_textview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3B5998"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friend_list_feed_item_xml_textview_placename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7A7A7A"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friend_list_feed_item_xml_textview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7A7A7A"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/friend_list_feed_item_xml_textview_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/friend_list_feed_item_xml_textview_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/friend_list_feed_item_xml_imageview_snap_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            android:visibility="gone" />

        <WebView
            android:id="@+id/friend_list_feed_item_xml_webview"
            android:layout_width="230dp"
            android:layout_height="280dp" 
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:orientation="horizontal">

            <Button
                android:id="@+id/friend_list_feed_item_xml_button_comment"
                style="@style/CommentButton"
                android:background="@drawable/button_state_selector"
                android:text="Comments" />
            
            <Button
                android:id="@+id/friend_list_feed_item_xml_button_like"
                style="@style/CommentButton"
                android:background="@drawable/button_state_selector_like"
                android:text="Like +2" />
            
        </LinearLayout>

        <TextView
            android:id="@+id/friend_list_feed_item_xml_textview_number_of_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 comments"
            android:textColor="#7A7A7A"
            android:textSize="10dp" />

        <!-- 1st comment -->
        <LinearLayout
            android:id="@+id/friend_list_feed_item_xml_linearlayout_1st_comment"
            android:visibility="gone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="#ECEFF5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/friend_list_feed_item_xml_textview_1st_picture"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_default" 
                    />

                <TextView
                    android:id="@+id/friend_list_feed_item_xml_textview_1st_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#3B5998"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/friend_list_feed_item_xml_textview_1st_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E9E9E"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/friend_list_feed_item_xml_textview_1st_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>