    <ListView
        android:id="@+id/weapon_xml_listview_weapons"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/aluminum5"
        android:cacheColorHint="@android:color/transparent" />

</LinearLayout>