<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_border"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/quest_xml_imageview_quest_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/city_map" />

        <TableLayout
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:stretchColumns="1" >

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:text="Quest"
                    android:textColor="#0e1f5b"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quest_xml_textview_quest_name"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#dd3c10" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:text="Places"
                    android:textColor="#0e1f5b"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quest_xml_textview_places"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#dd3c10" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_column="1"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:text="Rewards"
                    android:textColor="#0e1f5b"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quest_xml_textview_rewards"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#dd3c10" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/quest_xml_listview_quest_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eceff5" />

</LinearLayout>