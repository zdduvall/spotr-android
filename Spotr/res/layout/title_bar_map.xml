<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TitleBarBackground" >

    <!-- Navigation/Title -->
    <LinearLayout style="@style/TitleBarNav" >
        
        <ImageButton style="@style/TitleBarLogo" />

        <TextView
            android:id="@+id/title_bar_title"
            style="@style/TitleBarTitle" />
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:id="@+id/title_bar_actions"
        style="@style/TitleBarActions" >
        
        <View style="@style/VerticalSpacer.TitleBar" />

        <ImageButton
            android:id="@+id/title_bar_map_btn_locate"
            style="@style/TitleBarButton.MapLocate" />

        <View style="@style/VerticalSpacer.TitleBar" />

        <ImageButton
            android:id="@+id/title_bar_map_btn_places"
            style="@style/TitleBarButton.MapPlaces" />
    </LinearLayout>

</LinearLayout>