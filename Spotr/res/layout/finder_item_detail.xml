<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@color/fb_background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/finder_item_detail_xml_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/fb_header" />
    
    <TextView
        android:id="@+id/finder_item_detail_xml_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No name found." />

    <TextView
        android:id="@+id/finder_item_detail_xml_desc_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/fb_header"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/finder_item_detail_xml_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No item description found." />

    <TextView
        android:id="@+id/finder_item_detail_xml_user_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fb_header"
        android:text="Posted by"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/finder_item_detail_xml_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No username found." />
    
    <TextView
        android:id="@+id/finder_item_detail_xml_points_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fb_header"
        android:text="Reward Value"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/finder_item_detail_xml_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No reward value found." />

    <Gallery
        android:id="@+id/finder_item_detail_xml_gallery"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <RelativeLayout 
        android:id="@+id/finder_item_detail_xml_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
	    <Button
	        android:id="@+id/finder_item_detail_xml_button_add_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/TreasureButton"
	        android:layout_gravity="left|center"
	        android:text="Add picture?" />
	    
	    <Button
	        android:id="@+id/finder_item_detail_xml_button_found"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/TreasureButton"
	        android:layout_gravity="right|center"
	        android:layout_toRightOf="@id/finder_item_detail_xml_button_add_image"
	        android:text="I found it!" />
    
    </RelativeLayout>

</LinearLayout>