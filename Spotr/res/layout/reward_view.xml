<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/reward_view_xml_imageview_badge"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/badge_shape"
        android:src="@drawable/awards" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/reward_border"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#0e1f5b"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reward_view_xml_textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#0e1f5b"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reward_view_xml_textview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/reward_view_xml_textview_pointlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"
            android:textColor="#0e1f5b"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reward_view_xml_textview_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/reward_view_xml_textview_rewarddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rewarded Date"
            android:textColor="#0e1f5b"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reward_view_xml_textview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12dp" />
    </LinearLayout>

    <Button
        android:id="@+id/reward_view_xml_button_convert"
        style="@style/TreasureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Convert" />

</LinearLayout>