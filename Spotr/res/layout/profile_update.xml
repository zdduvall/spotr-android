<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffc5ccd4"
    android:orientation="vertical"
    android:padding="10sp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_rounded_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/profile_xml_textview_profilename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1sp"
            android:padding="5dp"
            android:text="Name"
            android:textColor="@color/aluminum6"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_rounded_white"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/profile_xml_imageview_user_picture"
                    android:layout_width="120sp"
                    android:layout_height="120sp"
                    android:adjustViewBounds="true"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/user_default" />

                <Button
                    android:id="@+id/profile_xml_button_edit"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_blue"
                    android:text="Edit Profile"
                    android:textSize="16sp"
                    android:layout_marginTop="5sp" />
            </LinearLayout>
            
            <!-- Stats -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_marginLeft="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:text="Points"
                            android:textColor="@color/aluminum6"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/profile_xml_textview_points"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:gravity="right"
                            android:text="00"
                            android:textColor="@color/aluminum6"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_marginLeft="2sp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="5dp"
                            android:text="Challenges Done"
                            android:textColor="@color/aluminum6"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/profile_xml_textview_challenges_done"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="00"
                            android:textColor="@color/aluminum6"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_marginLeft="2sp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="5dp"
                            android:text="Spots Visited"
                            android:textColor="@color/aluminum6"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/profile_xml_textview_places_visited"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="00"
                            android:textColor="@color/aluminum6"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/profile_xml_badges_1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/profile_xml_badges_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp" >

                            <ImageView
                                android:id="@+id/profile_xml_badges_3"
                                android:layout_width="30sp"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"
                                android:clickable="true"
                                android:src="@drawable/awards" >
                            </ImageView>

                            <TextView
                                android:id="@+id/profile_xml_textview_numrewards"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10sp"
                                android:gravity="right"
                                android:text="00"
                                android:textColor="@color/aluminum6"
                                android:textSize="25sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profile_xml_friends_1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/profile_xml_friends_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp" >

                            <ImageView
                                android:id="@+id/profile_xml_friends_3"
                                android:layout_width="30sp"
                                android:layout_height="match_parent"
                                android:background="#FFFFFF"
                                android:clickable="true"
                                android:src="@drawable/ic_main_menu_friends_default" >
                            </ImageView>

                            <TextView
                                android:id="@+id/profile_xml_textview_numfriends"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10sp"
                                android:gravity="right"
                                android:text="00"
                                android:textColor="@color/aluminum6"
                                android:textSize="25sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity"
        android:textColor="@color/watermelonRed"
        android:textSize="10sp" />

    <ListView
        android:id="@+id/profile_xml_listview_user_feeds"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/rectangle_rounded_white" />

