<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ECEFF5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/comment_item_xml_textview_post_comments_user_picture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/comment_item_xml_textview_post_comments_user_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Vlad"
            android:textColor="#3B5998"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>

		<TextView
            android:id="@+id/comment_item_xml_textview_post_comments_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:text="6 hours ago"
            android:textColor="#9E9E9E"
            android:textSize="10dp" />
		
        <TextView
            android:id="@+id/comment_item_xml_textview_post_comments_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="The Argentine has given his account of what happened that"
            android:textColor="#000000"
            android:textSize="10dp" />
</LinearLayout>
