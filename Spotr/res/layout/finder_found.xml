<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d8dfea" >

    <ImageView
        android:id="@+id/finder_found_xml_imageview_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/challenges" />

    <Button
        android:id="@+id/finder_found_xml_button_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/TreasureButton"
        android:text="Take a picture!" />
    
    <TextView
        android:id="@+id/finder_found_xml_textview_character_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/160"
        android:textColor="#000000"
        android:textSize="14dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/finder_found_xml_edittext_message"
        android:layout_width="match_parent"
        android:gravity="top"
        android:maxLength="160"
        android:layout_height="200dp"
        android:inputType="textMultiLine" />
    
    <Button
        android:id="@+id/finder_found_xml_button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/TreasureButton"
        android:text="Submit Found Item" />

</LinearLayout>